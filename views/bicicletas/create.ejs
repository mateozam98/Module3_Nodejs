<%- include('../partials/_header') %>

<div class="container mt-5">

    <div class="row my-5">
        <div class="col-sm-10 col-12">
            <h3 id="quote" class="text-white">Nueva Bicicleta</h3>
        </div>
        <div class="col-sm-2 col-12">
        <a class="btn btn-primary mx-auto" href="/bicicleta_list">Volver</a>
        </div>
    </div>

    <div class="container my-5">
        <div class="card  p-5 shadow ">

        
            <form action="/bicicletas/create" method="POST">
                    
            <div class="form-group">
                    <label for="id" class='font-weight-bolder '>Codigo:</label>
                    <input type="text" class="form-control shadow-sm" name='code' autofocus>
                <div>    
                <div class="form-group">    
                    <label for="color" class='font-weight-bolder'>Color:</label>
                    <input type="text" class="form-control shadow-sm" name='color'>
                <div>
                <div class="form-group">         
                    <label for="modelo" class='font-weight-bolder'>Modelo:</label>
                    <input type="text" class="form-control shadow-sm" name='modelo'>
                <div>
                <div class="form-group">  
                    <label for="lat" class='font-weight-bolder'>Latitud:</label>
                    <input type="text" class="form-control shadow-sm" name='latitud'>
                <div>
                <div class="form-group"> 
                    <label for="long" class='font-weight-bolder'>Longitud:</label>
                    <input type="text" class="form-control shadow-sm" name='longitud'>
                <div>

                <button type="submit"  class="btn btn-info btn-block mt-3">Grabar</button>
            </form>   
        </div>
    </div> 
</div>       


 
    