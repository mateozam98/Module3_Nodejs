<%- include('../partials/_header') %>
<div class="container mt-5">
  
  <div class="row my-5">
      <div class="col-sm-10 col-12">
          <h3 id="quote" class="text-white">Listado de Usuarios</h3>
      </div>
      <div class="col-sm-2 col-12">
        <a class="btn btn-primary mx-auto" href="/#map">Volver</a>
      </div>
  </div>
  
  <div class="card  p-5 shadow-sm">
    <table class="table table-sm table-striped table-bordered ">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Email</th>
            <th scope="col">Verificado</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            <% for (usuario of usuarios) { %>
                <tr>
                    <th scope="row"><%= usuario.id%></th>
                    <td><%= usuario.nombre%></td>
                    <td><%= usuario.email%></td>
                    <td><%= usuario.verificado ? 'SI' : 'NO' %></td>
                    <td><a href="/usuarios/<%= usuario.id %>/update" class="btn btn-success">Modificar</a></td>
                    <td><form class="form-inline" method="POST" action="/usuarios/<%= usuario.id %>/delete" ><input type="hidden" name='code' value = <%= usuario.id%> >
                        <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>   
                </tr>
            <% } %>                 
        </tbody>
      </table>

    
    <a class="btn btn-info " href="usuarios/create">Crear usuario</a>
    
    

</div>
  
  

</div>