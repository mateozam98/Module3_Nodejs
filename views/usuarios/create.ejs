<%- include('../partials/_header') %>

<div class="container mt-5">

    <div class="row my-5">
        <div class="col-sm-10 col-12">
            <h3 id="quote" class="text-white">Nuevo Usuario</h3>
        </div>
        <div class="col-sm-2 col-12">
        <a class="btn btn-primary mx-auto" href="/usuarios">Volver</a>
        </div>
    </div>
    <div class="container my-5">
        <div class="card  p-5 shadow ">

        
            <form action="/usuarios/create" method="POST">
                    
                <div class="form-group">
                    <label for="nombre" class='font-weight-bolder <%= errors.nombre ? 'is-invalid' : '' %> '>Nombre:</label>
                    <input type="text" class="form-control shadow-sm <%= errors.nombre ? 'is-invalid' : '' %>" name='nombre' value = "<%= usuario.nombre %>" autofocus>
                    <% if(errors.nombre){ %>
                        <p style="color:red"><%= errors.nombre.message  %></p>
                    <% }; %>  
                <div>    
                <div class="form-group">    
                    <label for="email" class='font-weight-bolder'>Email:</label>
                    <input type="text" class="form-control shadow-sm <%= errors.email ? 'is-invalid' : '' %>" value = "<%= usuario.email %>" name='email'>
                    <% if(errors.email){ %>
                        <p style="color:red"><%= errors.email.message  %></p>
                    <% }; %>
                <div>
                <div class="form-group">         
                    <label for="password" class='font-weight-bolder'>Password:</label>
                    <input type="password" class="form-control shadow-sm <%= errors.password ? 'is-invalid' : '' %>" value = "<%= usuario.password %>" name='password'>
                    <% if(errors.password){ %>
                        <p style="color:red"><%= errors.password.message  %> </p>
                    <% }; %>
                <div>
                <div class="form-group">  
                    <label for="confirm_pwd" class='font-weight-bolder'>Confirm Password:</label>
                    <input type="password" class="form-control shadow-sm <% errors.confirm_password ? 'is-invalid' : '' %>" value = "<%= confirm_password %>" name='confirm_password'>
                    <% if(errors.confirm_password){ %>
                        <p style="color:red"> <%= errors.confirm_password.message  %> </p>    
                    <% }; %>
                <div>
                
               
                <button type="submit"  class="btn btn-info btn-block mt-3">Grabar</button>
            </form>   
        </div>
    </div> 











    

</div>       